@model FosterFinder.Models.FosterHomeEdit

@{
    ViewBag.Title = "Edit";
}

<h1>Edit Foster Home Information</h1>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.HomeId)
        <div class="row">
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.FamilyName, htmlAttributes: new { @class = "control-label col-md-4 " })
                    @Html.EditorFor(model => model.FamilyName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FamilyName, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.OpenBeds, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.OpenBeds, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OpenBeds, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.GenderPref, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div style="color:#210400;">
                        @Html.EnumDropDownListFor(model => model.GenderPref, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GenderPref, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.SchoolDistrict, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.SchoolDistrict, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SchoolDistrict, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.AgePrefMin, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.AgePrefMin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AgePrefMin, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.AgePrefMax, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.AgePrefMax, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AgePrefMax, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Agency, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.Agency, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Agency, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.CaseworkerName, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.CaseworkerName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CaseworkerName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class-"row">
            <div class="form-group">
                <div class="col-md-6">

                    @Html.LabelFor(model => model.CaseworkerContact, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.EditorFor(model => model.CaseworkerContact, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CaseworkerContact, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-4" })
                    @Html.TextAreaFor(model => model.Comments, new { @class = "commentsbox" })
                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6">
                <p style="color:lightgoldenrodyellow;" class="control-label col-md-4">Photo Url</p>
                @Html.EditorFor(model => model.PhotoUrl, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PhotoUrl, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div>
        <input type="submit" value="Save Updates" class="mybtnlog" />
    </div>
}
<div>
    @Html.ActionLink("Foster Home Openings", "Index", null, new { @class = "mybtnlog" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
