@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Foster Match</h1>
    <p class="lead">Helping foster families come together.</p>
</div>

@if (!User.Identity.IsAuthenticated)
{

    @Html.ActionLink("Log in", "Login", "Account", null, new { @class = "btn btn-primary btn-lg" })
    <p> @Html.ActionLink("Register Here", "Register", "Account", null, null)</p>
}
@if (User.IsInRole("Admin"))
{
    <h2>Hello Administrator!</h2>
    @Html.ActionLink("Foster Home Openings", "Index", "FosterHome", null, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("Children Needing Placement", "Index", "Child", null, new { @class = "btn btn-primary btn-lg" })
}
@if (User.IsInRole("FosterHomeManager"))
{
    <h2>Hello Foster Home Manager!</h2>
    @Html.ActionLink("Foster Home Openings", "Index", "FosterHome", null, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("Children Needing Placement", "Index", "Child", null, new { @class = "btn btn-primary btn-lg" })
}
@if (User.IsInRole("ChildManager"))
{
    <h2>Hello Family Case Manager!</h2>
    @Html.ActionLink("Foster Home Index", "Index", "FosterHome", null, new { @class = "btn btn-primary btn-lg" })
    @Html.ActionLink("Children Needing Placement", "Index", "Child", null, new { @class = "btn btn-primary btn-lg" })
}





















